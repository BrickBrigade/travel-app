{
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"ignorePatterns":["**/dist/*.js"],
	"extends": "eslint:recommended",
	"rules": {
		"space-in-parens": "warn",
		"array-bracket-spacing": "warn",
		"object-curly-spacing": ["warn", "always"],
		"object-curly-newline": "warn",
		"semi": "warn",
		"comma-dangle": "warn"
	}
}